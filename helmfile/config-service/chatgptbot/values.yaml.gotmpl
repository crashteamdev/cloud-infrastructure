# -*- mode: yaml -*-
{{- $applicationName := .Release.Name -}}

replicaCount: 2

nodeSelector:
  mdb-service: "true"

image:
  repository: ghcr.io/crashteamdev/chatgptbot
  tag: sha-4f7e591
  pullPolicy: IfNotPresent

{{ if .Values.services.global.registry.imagePullSecret }}
imagePullSecrets:
  - name: {{ .Values.services.global.registry.imagePullSecret }}
{{ end }}

service:
  type: ClusterIP
  ports:
    - name: http
      port: 3000

env:
  - name: HOSTNAME
    valueFrom:
      fieldRef:
        fieldPath: metadata.name
  - name: BOT_TOKEN
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: bot-token
  - name: OPENAI_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: openai-api-key
  - name: DEEPSEEK_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: deepseek-api-key
  - name: STABILITY_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: stability-api-key
  - name: AUDIO_AI_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: audio-ai-api-key
  - name: DATABASE_URL
    value: postgresql://{{ .Values.services.postgres.uniUser }}:{{ .Values.services.postgres.uniPassword }}@{{ .Values.services.postgres.endpoint }}:6432/chainbrain
  - name: TERMINALKEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: terminal-key
  - name: TERMINALTOKEN
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: terminal-token
  - name: REDIS_URL
    value: rediss://default:{{ .Values.services.redis.password }}@{{ .Values.services.redis.endpoint }}:6380
  - name: LOG_CHANNEL_ID
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: log-channel-id
  - name: GEMINI_AI_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: gemeni-ai-api-key
  - name: GROK_AI_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: grok-ai-api-key
  - name: ISDEV
    value: "false"
  - name: PORT
    value: "3000"
  - name: CHAINBRAIN_AGENT_URL
    value: chainbrain-agent:9090
  - name: ENCRYPTION_ENABLED
    value: "true"
  - name: CHATGPT_BOT_MASTER_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: message-encryption-key
  - name: ID_CHANNEL
    value: "-1002769141534"
  - name: AIMLAPI_AI_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: aimlapi-api-key
  - name: ENABLE_CONSUMER
    value: "true"
  - name: YDS_STREAM_NAME
    value: "/ru-central1/b1gtojcphtuae1n9siie/etnvck8jo3kuh0vilc57/mdb-payment"
  - name: YDS_REGION
    value: "ru-central1"
  - name: YDS_ENDPOINT
    value: "https://yds.serverless.yandexcloud.net"
  - name: YC_ACCESS_KEY_ID
    valueFrom:
      secretKeyRef:
        name: charon
        key: aws_stream_access_key
  - name: YC_SECRET_ACCESS_KEY
    valueFrom:
      secretKeyRef:
        name: charon
        key: aws_stream_secret_key
  - name: APP_URL
    value: "https://cbp.marketdb.pro/"
  - name: POSTHOG_API_KEY
    valueFrom:
      secretKeyRef:
        name: {{ .Release.Name }}-secrets
        key: posthog-api-key

livenessProbe:
  httpGet:
    path: /health
    port: 3000
  initialDelaySeconds: 20
  timeoutSeconds: 10
  periodSeconds: 30
  failureThreshold: 3

readinessProbe:
  httpGet:
    path: /health
    port: 3000
  initialDelaySeconds: 12
  timeoutSeconds: 5
  periodSeconds: 10
  failureThreshold: 3

startupProbe:
  httpGet:
    path: /health
    port: 3000
  initialDelaySeconds: 10
  timeoutSeconds: 5
  periodSeconds: 5
  failureThreshold: 30

resources:
  requests:
    memory: 132Mi
    cpu: 100m
  limits:
    memory: 512Mi
    cpu: 500m
